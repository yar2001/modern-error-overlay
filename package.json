{
  "name": "modern-error-overlay",
  "author": "yar2001",
  "version": "0.1.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/yar2001/modern-error-overlay"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "keywords": [
    "error",
