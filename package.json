    "jsdom": "^20.0.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vite-plugin-css-injected-by-js": "^1.5.1",
    "vite-plugin-dts": "^1.2.1",
    "vitest": "^0.18.1",
    "postcss-rem-to-pixel": "^4.1.2"
  },
  "dependencies": {
    "rxjs": "^7.5.5"
